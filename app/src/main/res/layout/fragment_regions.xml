<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".poland.RegionsFragment"
    android:background="@drawable/bg_regions">

    <RelativeLayout
        android:id="@+id/regionsHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_green">

        <TextView
            android:id="@+id/wojewodztwoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wojewodztwo"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:fontFamily="@font/inknut_antiqua_light"
            android:shadowColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30sp"
        android:layout_below="@+id/regionsHeader"
        android:id="@+id/layout_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dane_z_dnia"
            android:textSize="25sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="30sp"
        android:layout_marginStart="20dp"
        android:id="@+id/layout_cases"
        android:layout_below="@+id/layout_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/number_cases_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liczba_przypadkow"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/number_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/number_cases_txt"
            android:text=""
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_marginStart="20dp"
        android:id="@+id/layout_deaths"
        android:layout_below="@+id/layout_cases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/deaths_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liczba_zgonow"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/number_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/deaths_number_txt"
            android:text=""
            android:textSize="20sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="@string/powr_t_do_mapy_polski"
        android:background="@drawable/back_button"/>

</RelativeLayout>