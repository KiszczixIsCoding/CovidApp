<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".poland.RegionsFragment" >

    <RelativeLayout
        android:id="@+id/layout_cases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/number_cases_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba przypadków: "/>

    <TextView
        android:id="@+id/number_cases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/number_cases_txt"
        android:text="A" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_cases">
    <TextView
        android:id="@+id/deaths_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba zgonów: "/>

    <TextView
        android:id="@+id/number_deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_toEndOf="@+id/deaths_number_txt"
        android:layout_marginStart="0dp" />
    </RelativeLayout>

</RelativeLayout>