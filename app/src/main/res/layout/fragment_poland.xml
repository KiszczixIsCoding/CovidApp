<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_map"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fragmentPolandContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/spinnerLayout">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/spinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chooseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wybierz_wojewodztwo"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"/>

            <Spinner
                android:id="@+id/regionsSpinner"
                android:layout_below="@+id/chooseText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/style_spinner" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>